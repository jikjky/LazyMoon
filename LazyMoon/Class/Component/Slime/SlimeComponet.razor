@inherits LazyMoon.Class.Component.Slime.SlimeModel

<img class="slime" src="@Image"
     style="position: absolute;
            width:@($"{Size}px");
            height:auto;
            top: @($"{Position.y}%");
            left: @($"{Position.x}%");
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -o-user-select: none;
            user-select: none;
            -webkit-user-drag: none;
            -khtml-user-drag: none;
            -moz-user-drag: none;
            -o-user-drag: none;
            user-drag: none;" 
/>