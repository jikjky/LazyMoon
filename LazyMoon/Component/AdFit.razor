@inject IJSRuntime JSRuntime

<div id="adfit-container" style="width:100%; text-align:center;">
    <ins class="kakao_ad_area"
         style="display:none;"
         data-ad-unit="@AdUnitID"
         data-ad-width="320"
         data-ad-height="250"></ins>
</div>

@code {
    [Parameter]
    public string AdUnitID { get; set; }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // link:script.js:loadKakaoAdScript
            await JSRuntime.InvokeVoidAsync("loadKakaoAdScript");
        }
    }
}